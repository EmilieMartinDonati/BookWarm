<div class="container" id="one-book">
    <div class="row p-3" id="bg-one-book">
        <hr>
        <div class="col-md-7 col-sm-12 m-3">
            <div class="card">
                <div class="card-body">
                    <div class="relative">
                    <div>
                    <img class="img-card absolute-img" src={{image}} alt=""/>
                    </div>
                    <h4 class="card-text absolute-top" id="review">{{titleFound.title}}</h4>
                    <p class="absolute-high">{{titleFound.author_name}}</p>
                    <p>{{titleFound.first_sentence}}</p>
                    <div class="col-3 absolute-low" id="number-of-pages">{{titleFound.number_of_pages_median}} PAGES</div>
                    </div>
                    <hr>


                    {{#if isLoggedIn}}
                    <div class="row">
                    {{#unless alreadyWished}}
                        <div class="col-4 actions">
                            <i class="fas fa-heart"></i>
                            <a href="/oneBook/wishlist/{{titleFound.key}}"> Add to
                                wishlist</a>
                        </div>
                        {{/unless}}
                        {{#unless alreadyRead}}
                        <div class="col-4 actions">
                            <i class="fas fa-space-shuttle"></i><a href="/oneBook/redlist/{{titleFound.key}}"> Add to
                                    books already
                                    red</a>
                        </div>
                        {{/unless}}
                        {{#unless alreadyRated}}
                        <div class="col actions">
                            <form method="POST" action="/oneBook/rate/{{titleFound.key}}">
                                <input type="number" min="1" max="5" placeholder="1" name="rating" class="form-control">
                            <button class="btn">Rate this book</button>
                            </form>
                        </div>
                        {{/unless}}
                    </div>
                    
                    {{/if}}
                </div>
            </div>
        </div>


        <div class="col-md-4 col-sm-12 m-3">
            <div class="card" id="comment-card">
                <div class="card-body">
            <div class="row">
                <h3 id="reviews">REVIEWS</h3>
                {{#each reviews}}
                <div class="card">
                    <div class="card-body">

                        <div class="row">
                            <div class="col-8">
                        
                        <h5 class="card-text font-italic" id="review">"{{this.review}}"</h5>
                        <p class="card-text">By {{this.user.userName}}</p>
                        <p class="card-text">{{@root.numberOfLikes}} LIKE</p>

                        </div>

                        <div class="col-4">

                            <form action="/oneBook/like/{{this._id}}" method="POST">
                                <input class="hidden" type="text" name="review" value="{{this.review}}" />
                                <button class="btn btn-danger pr-0">
                                    <i class="far fa-heart"></i>
                                </button>
                            </form>
                            </div>
                        </div>
                    </div>
                </div>

                {{#compare @root.user this.user.userName}}


                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6">
                                <form action="/oneBook/edit/{{this._id}}" method="POST">
                                    <label for="review"></label>
                                    <input type="text" name="review" required class="form-control"/>
                                    <input class="hidden" type="text" name="key" value={{this.key}}>
                                    <button class="btn">
                                        <i class="fas fa-edit">EDIT</i>
                                    </button>
                                </form>
                                </div>
                                <div class="col-md-6 col-sm-12 mt-5 pt-3">
                                    <form action="/oneBook/delete/{{this._id}}" method="POST">
                                        <input class="hidden" type="text" name="key" value={{this.key}}>
                                        <button class="btn"><i class="fas fa-trash-alt">DELETE</i></p>
                                        </button>
                                    </form>
                                </div>
                        </div>
                    </div>
                </div>

                {{/compare}}
                {{/each}}

                {{!-- <p>{{reviews.user.username}}</p> --}}
            </div>

            {{#if isLoggedIn}}

            <button class="btn" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample"
                aria-expanded="false" aria-controls="collapseExample" id="reviewBtn">
                <h5>WRITE A REVIEW</h5>
            </button>

            <div class="collapse" id="collapseExample">
                <div class="card card-body" id="form">
                    <div class="text-center pt-4">
                        <form action="/oneBook/works/{{titleFound.key}}" method="POST">
                            <hr>
                            <label for="title" class="form-label">Title</label>
                            <input type="title" name="bookTitle" class="form-control" id="exampleFormControlInput1"
                                value="{{titleFound.title}}" />
                            <hr>
                            <label for="author" class="form-label">Author</label>
                            <input type="title" name="authorBook" class="form-control" id="exampleFormControlInput1"
                                value="{{titleFound.author_name}}" />
                            <label for="exampleFormControlTextarea1" class="form-label">Review</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"
                                name="review">Write your description here</textarea>
                            <div class="mb-3 justify-content-center"></div>
                            <button class="btn btn-outline-success ">Submit</button>
                        </form>
                    </div>
                </div>

                {{/if}}
            </div>
            </div>
            </div>
        </div>


    </div>
