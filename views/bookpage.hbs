        <div class="col-8">
            <div class="card">
                <div class="card-body">
                    <img class="img-card" src={{image}} alt="" style="width: 20rem;" />
                    <h1 class="card-text" id="review">{{titleFound.title}}</h1>
                    <p>{{titleFound.author_name}}</p>
                    <p>{{titleFound.first_sentence}}</p>
                    <div class="col-3" id="number-of-pages">{{titleFound.number_of_pages_median}} PAGES</div>
                    <hr>

                    {{#compare keyForCompare booksWished.key operator="!="}}
                    <div class="row">
                        <div class="col-6">
                            <i class="fas fa-heart"></i>
                            <a href="/oneBook/wishlist/{{titleFound.key}}">Add to
                                wishlist</a>
                        </div>

                        {{/compare}}
                        {{#compare keyForCompare booksRead.key operator="!="}}
                        {{!-- <p>{{keyForCompare}}</p>
                        <p>{{booksRead.key}}</p> --}}
                        <div class="col-6">
                            <i class="fas fa-space-shuttle"></i><a href="/oneBook/redlist/{{titleFound.key}}">Add to
                                books already
                                red</a>
                        </div>
                    </div>
                    {{/compare}}
                </div>
            </div>
        </div>



        <div class="col-4">
            <div class="row">
                <h3 id="reviews">REVIEWS</h3>
                <hr>
                {{#each reviews}}
                <div class="card">
                    <div class="card-body">
                        <p class="card-text" id="review">{{this.review}}</p>
                        <div class="row">
                            <form action="/oneBook/like/{{this._id}}" method="POST">
                                <input class="hidden" type="text" name="review" value="{{this.review}}" />
                                <button class="btn">
                                    <i class="far fa-heart"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
                {{#compare @root.user this.user.username}}


                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6">
                                <div class="row text-uppercase" id="likes">{{@root.numberOfLikes}} LIKE</div>
                            </div>
                            <div class="col-6">
                            <form action="/oneBook/edit/{{this._id}}" method="POST">
                                <label for="review"></label>
                                <input type="text" name="review" required />
                                <input class="hidden" type="text" name="key" value={{this.key}}>
                                <button class="btn">
                                    <i class="fas fa-edit">EDIT</i>
                                </button>
                            </form>
                        <hr>
                        <div class="col-6">
                            <form action="/oneBook/delete/{{this._id}}" method="POST">
                                <input class="hidden" type="text" name="key" value={{this.key}}>
                                <button class="btn"><i class="fas fa-trash-alt">DELETE</i></p>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            {{/compare}}
            {{/each}}
        </div>

        {{#if isLoggedIn}}
        <div>
            <button class="btn" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample"
                aria-expanded="false" aria-controls="collapseExample" id="reviewBtn">
                WRITE A REVIEW
            </button>

            <div class="collapse" id="collapseExample">
                <div class="card card-body" id="form">
                    <div class="text-center pt-4">
                        <form action="/oneBook/works/{{titleFound.key}}" method="POST">
                            {{!-- <label for='username'>Username</label>
                            <input type="text" name="{{req.session.currentUser.username}}" required> --}}
                            <label for="review-title">TITLE</label>
                            <input type="text" value="{{titleFound.title}}" name="bookTitle" />
                            <hr>
                            <label for="review-title">AUTHOR</label>
                            <input type="text" value="{{titleFound.author_name}}" name="authorBook" />
                            <hr>
                            <hr>
                            <label for="review-title">YOUR RATING ON 5</label>
                            <input type="text" value="5" min="1" max="5" name="rating" />
                            <hr>
                            <label for="description-text"></label>
                            <textarea id="description-text" name="review" cols="30"
                                rows="10">Write your description here</textarea>
                            <hr>
                            <button class="btn">SUBMIT</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {{/if}}
    </div>






</div>

