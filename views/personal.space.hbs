<div class="row mx-0 rounded g-0" id="row-first-personal">
  <div class="col-md-4 col-sm-6 text-end" id="container-personal-image">
    <h5 style="color: inherit" class="text-start text-danger text-uppercase my-4 px-4">HELLO {{foundUser.userName}}</h5>
    <div class="row text-end px-4" id="row-personal-image">
      <button class="btn" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample"
        aria-expanded="false" aria-controls="collapseExample" id="pictureBtn">
        <img src={{foundUser.image}} alt={{foundUser.userName}} class="rounded" id="personal-image" />
      </button>
    </div>
  </div>
  <div class="col-md-2 col-sm-6 py-2">
    <div class="row my-4 py-4" id="row-upload">
      <div class="collapse rounded mt-4" id="collapseExample" id="upload">
        <div class="card card-body" style="background-color: inherit">
          <div class="card-title text-center">Change your image</div>
          <div class="text-center pt-4">
            <form action="/uploadimage" method="post" enctype="multipart/form-data">
              <hr>
              <input type='file' name='image' class="form-control" />
              <hr>
              <button class="btn" id="img-upload" type="submit">Upload your image</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-6 col-sm-12 text-light px-4" id="your-followers">
    {{#if following}}
    <div class="row my-4">
      <div class="col-8 text-start">
        <h5 style="color: inherit" class="text-start">YOU FOLLOW THEM</h5>
      </div>
      <div class="col-4 text-end">
        <h5 class="text-end text-body">MORE</h5>
      </div>
    </div>
    {{/if}}
    <div class="d-flex flex-wrap flex-row p-0">
      {{#each following}}
      <div class="card col-4 p-0 m-0">
        <div class="card-body relative rounded p-0 m-0" style="border: none">
          <a href="/profile/{{this._id}}">
            <img src={{this.image}} class="d-block w-100 m-0 img-card absolute-image-following rounded" alt="cover" />
          </a>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>

