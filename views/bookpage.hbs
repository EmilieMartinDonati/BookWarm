
<div class="container" id="one-book">
    <div class="row">
        <div class="col-12">
            <h2 class="row" id="title">{{titleFound.title}}</h2>
            <h4 class="row" id="author">{{titleFound.author_name}}</h4>
            <h5 class="row" id="first-sentence">{{titleFound.first_sentence}}</h5>
            <div class="row">
                <div class="col-9" id="subject">{{titleFound.subject}}</div>
                <div class="col-3" id="number-of-pages">{{titleFound.number_of_pages_median}}</div>
            </div>
        </div>
    </div>
    <a href="/oneBook/wishlist/{{titleFound.key}}"> <button id="add-wishlist">Add to wishlist</button></a>
    <a href="/oneBook/redlist/{{titleFound.key}}"> <button id="add-red">Add to books already red</button></a>
    <a href="/oneBook/review/{{titleFound.key}}"> <button id="add-review">Leave a review</button></a>
</div>


